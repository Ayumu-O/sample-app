<h1>ホーム（Posts#index）</h1>
<% if user_signed_in? %>
    <p>あなたはログインしています！</p>
    <h2>投稿する</h2>
    <%= form_for @post do |f| %>
        <%= f.text_field :content %>
        <%= f.submit %>
    <% end %>
    <hr>
    <h2>投稿一覧</h2>
    <% @posts.each do |post| %>
        <div style="padding: 10px; margin-bottom: 10px; border: 1px solid #333333;">
            <a href="/users/<%= post.user.id %>">@<%= post.user.name %></a>
            <h4><a href="/posts/<%= post.id %>"><%= post.content %></a></h4>
        </div>
    <% end %>
    <hr>
    <%= link_to "ログアウトする", logout_path %>
    <%= link_to "登録情報を変更する", edit_user_registration_path %>
    <%= link_to "ユーザ削除", user_registration_path, method: :delete, data: { confirm: "You sure?" } %>
<% else %>
    <p>ログインしてください！</p>
    <%= link_to "新規登録する", signup_path %>
    <%= link_to "ログインする", login_path %>
<% end %>