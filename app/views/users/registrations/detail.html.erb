<h1>ユーザー詳細ページ</h1>
<h2>ユーザー情報</h2>
<p>ユーザー名： <%= @user.name %></p>
<p>メールアドレス： <%= @user.email %></p>
<hr>
<h2>投稿内容</h2>
<% @user.posts.each do |post| %>
    <a href="/posts/<%= post.id %>"><%= post.content %></a>
    <span class="post-date pull-right">
        <%= post.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
    </span>
    <hr>
<% end %>
<%= link_to "ユーザー一覧へ", index_path %>
<%= link_to "ホームへ戻る", root_path %>